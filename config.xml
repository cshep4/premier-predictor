<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cshep4.WCP" version="0.0.1" xmlns="http://www.w3.org/ns/widgets">
    <name>World Cup 2018 Predictor</name>
    <description>World cup predictor app</description>
    <author email="chris_shepherd2@hotmail.com">Chris Shepherd</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="http://ionic.local/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
